


    <h1>@ViewBag.Title</h1>
    <div class="box box-primary">
        <div class="box-body">
            <form class="form-horizontal" action="~/Product/Edit/123" method="post" enctype="multipart/form-data">


                <div class="form-group">
                    <label class="control-label col-sm-2">Tên thuộc tính:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" autofocus name="AttributeName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" autofocus name="AttributeValue">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" autofocus name="DisplayOrder">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/Product/Edit/123">
                            Quay lại
                        </a>
                    </div>
                </div>
            </form>

        </div>

    </div>
}


