

@if (ViewBag.IsEdit)
{
    <h1>@ViewBag.Title</h1>
    <div class="box box-primary">
        <div class="box-body">
            <form class="form-horizontal" action="~/Product/Edit/123" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label class="control-label col-sm-2">Ảnh minh họa:</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                               onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Mô tả:</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" name="Description"></textarea>
                    </div>
                </div>



                <div class="form-group">
                    <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" autofocus name="DisplayOrder">
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-10">
                        <div style=" margin-left: 196px;" class="checkbox">
                            <label>
                                <input type="checkbox" name="IsHidden" value="true" /> Ẩn ảnh?
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/Product">
                            Quay lại
                        </a>
                    </div>
                </div>
            </form>

        </div>

    </div>
}
