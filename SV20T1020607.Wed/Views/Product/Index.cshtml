@{
    ViewBag.Title = "Quản lý mặt hàng";

}
<h1>@ViewBag.Title</h1>
<div class="box box-primary">
    <div class="box-body">
        <!--Form tim kiem -->
        <form id="formSearch" action="#">

            <div class="container-fluid row">
                <div class="col-sm-3">
                    <select class="form-control" name="catelory">
                        <option>--Tất cả---</option>
                        <option>--Điện thoại---</option>
                        <option>--Máy tính---</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="supplier">
                        <option>--Tất cả---</option>
                        <option>--Công ty TNHH Trung---</option>
                        <option>--Công ty TNHH A---</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control" placeholder="Nhâp tên mặt hàng cần tìm .....">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i>Bổ Sung
                        </a>
                    </div>
                </div>
            </div>

           
        </form>
        <!-- -->
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong> 1,024</strong> khách hàng trong tổng số <strong>100 </strong>trang !!!!
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th style="width:80px">Ảnh</th>
                            <th style="width:auto">Tên mặt hàng</th>
                            <th style="width:100px">Đơn vị tính</th>
                            <th style="width:120px">Giá</th>
                            <th style="width:100px">Ngừng bán?</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <tr>
                                <td>
                                    <img style="width:80%" src="~/images/products/iphone.png" alt="Ảnh"/>
                                </td>
                                <td>Iphone 14
                                <br />
                                    <i>IPhone giá rẻ,...</i>
                                </td>
                                <td>Cái</td>
                                <td>12.000.000 VNĐ</td>
                                <td></td>
                                <td class="text-right">
                                    <a href="~/Product/Edit/123" class="bnt bnt-xs bnt-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a style="color: red;"  href="~/Product/Delete/123" class="bnt bnt-xs bnt-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


