<h1>@ViewBag.Title</h1>
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="#">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Iphone 14</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Iphone giá rẻ,...</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Cái</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giá bán:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">12.000.000 VNĐ</p>
                </div>
            </div>




            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="iphone.png" />
                    <img id="Photo" src="~/images/products/iphone.png" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xác nhận xóa dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>

